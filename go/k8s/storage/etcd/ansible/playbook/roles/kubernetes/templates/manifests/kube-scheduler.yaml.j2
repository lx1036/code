apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: lx1036/hyperkube:v{{k8s_version}}
    command:
    - ./hyperkube
    - scheduler
    - --master={{ kube_api_servers }}
    - --kubeconfig={{ kube_home }}/kubeconfig
    - --leader-elect
    livenessProbe:
      httpGet:
        host: 127.0.0.1
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
      timeoutSeconds: 1
    volumeMounts:
    - mountPath: {{ kube_home }}/certs
      name: kube-certs
      readOnly: true
    - mountPath: {{ kube_home }}/kubeconfig
      name: kube-config
      readOnly: true
  volumes:
  - hostPath:
      path: {{ kube_home }}/certs
    name: kube-certs
  - hostPath:
      path: {{ kube_home }}/kubeconfig
    name: kube-config
