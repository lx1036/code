NODENAME={{ ansible_nodename }}
IP={{ hostvars[inventory_hostname]['ansible_' + iface]['ipv4']['address'] }}
AS=65188
ETCD_ENDPOINTS={{ calicoctl['etcd_endpoints'] }}
ETCD_KEY_FILE=/etc/calico/key.pem
ETCD_CERT_FILE=/etc/calico/cert.pem
ETCD_CA_CERT_FILE=/etc/calico/ca.pem
FELIX_IPV6SUPPORT=false

NO_DEFAULT_POOLS=true
CALICO_NETWORKING_BACKEND=bird
CLUSTER_TYPE=k8s,bgp
CALICO_DISABLE_FILE_LOGGING=true
WAIT_FOR_DATASTORE=true
CALICO_IPV4POOL_NAT_OUTGOING=false
